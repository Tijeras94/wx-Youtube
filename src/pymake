#!/usr/bin/env python2

from os import system

#File to compile
files="Enums.hpp MainFrame.hpp VideoEntry.hpp VideoListCtrl.hpp MainApp.cpp PrefWindow.cpp VideoInfo.cpp wx-youtube.cpp MainApp.hpp PrefWindow.hpp VideoInfo.hpp wx-youtube.hpp MainFrame.cpp VideoEntry.cpp VideoListCtrl.cpp"

#Output file options
output_name="Youtube-wx"

#Compiler args
args=" -lcurl `wx-config --cxxflags --libs`"

#Compiler
compiler="g++"

command = "%s %s -o %s %s" % (compiler, files, output_name, args)

print "Using command: ", command 

system(command)

